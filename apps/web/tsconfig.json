{
  "extends": "@shipmobile/config/tsconfig/nextjs",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@shipmobile/ui": ["../../packages/ui/src"],
      "@shipmobile/ui/*": ["../../packages/ui/src/*"],
      "@shipmobile/app": ["../../packages/app/src"],
      "@shipmobile/app/*": ["../../packages/app/src/*"],
      "@shipmobile/utils": ["../../packages/utils/src"],
      "@shipmobile/utils/*": ["../../packages/utils/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
